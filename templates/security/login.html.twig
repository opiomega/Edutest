{% extends "layout.html.twig" %}
{% block title %}Log in!
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
		* {
			box-sizing: border-box;
		}
		.containerlogin {
			height: 400px;
			width: 900px;
			box-shadow: -6px 8px 40px 5px rgba(0, 0, 0, 0.35);
			display: flex;
			background: #F8F8F8;
			border: none;
			border-radius: 20px;
			top: 50%;
			left: 50%;
			position: absolute;
			transform: translate(-50%, -50%);
		}
		.image {
			flex: 50%;
			background-color: #E4E9F2;
			text-align: center;
			border: none;
			border-radius: 20px;
		}
		.image > img {
			width: 100px;
		}
		.image h1 {}
		.content {

			border: none;
			border-radius: 25px;
			flex: 50%;
			background: #F8F8F8;

		}
		.content h1 {

			font-style: normal;
			font-weight: bold;
			font-size: 28px;
			line-height: 66px;
			color: #B22640;
			text-shadow: 0 6px 5px rgba(0, 0, 0, 0.5);
			padding-left: 90px;
			padding-right: 20px;
			letter-spacing: 2px;
			margin-bottom: 30px;
			align-text: center;
			justify-content: center;

		}
		#txt {
			width: 80%;
			height: 30px;
			background: #E4E9F2;
			border: 1px solid #384D77;
			box-sizing: border-box;
			border-radius: 30px;
		}
		label {

			font-style: normal;
			font-weight: 600;
			font-size: 19px;
			line-height: 25px;

			color: #384D77;
		}
		#txt:focus {
			outline: none;
		}
		.fp {
			text-decoration: none;
			line-height: 29px;
			color: #B22640;
		}
		button {
			width: 125px;
			height: 37px;
			border: none;
			background: #384D77;
			box-shadow: 4px -4px 20px rgba(0, 0, 0, 0.25);
			border-radius: 30px;
		}
		button a {
			text-decoration: none;
			color: white;
		}
		.signup {
			background: #B22640;
			box-shadow: 4px -4px 20px rgba(0, 0, 0, 0.25);
			border-radius: 30px;
		}
		.login_pic {
			width: 60%;
		}
		.account {
			font-weight: 500;
			font-size: 20px;
			line-height: 29px;
			padding-top: 10px;
			color: #B22640;
		}


	</style>
{% endblock %}


{% block body %}

	<div class="containerlogin">
		<div class="image">
			<div class="container">
				<div class="row">
					<div class="col">

						<br><br>

					</div>
				</div>
				<div class="row justify-content-center">
					<div class="col-md-4"></div>
					<div class="col-xs-4">
						<img class="login_pic" src="{{asset('image/loginpic.png')}}" alt="">

					</div>
					<div class="col-md-4"></div>
				</div>

				<div class="row">
					<div class="col">

						<p class="account">Don't have an account ?</p>

					</div>

				</div>


				<div class="row">
					<div class="col">
						<button type="button" class="signup">
							<a href="">Sign up</a>
						</button>
					</div>
				</div>

			</div>

		</div>
		<div class="content ">


			<div class="container">
				<h1>Login to Edutest</h1>
				<form method="post">
					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-2">
							<label>Email:</label>
						</div>
					</div>


					<div class="row justify-content-center">


						<input type="email" value="{{ last_username }}" name="email" class="form-control" name="" id="txt" aria-describedby="helpId" placeholder="exemple@domaine.com">

						<br><br>


					</div>


					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-2">
							<label>Password:</label>
						</div>
					</div>
					<div class="row justify-content-center">
						<input type="password" class="form-control" name="password" id="txt" placeholder="Password">


					</div>
					<br>
					<div class="row  justify-content-center">

						<div class="col">
							<label>
								<input type="checkbox" name="" id="">
								Remember me
							</label>
						</div>
						<div class="col">
							<a class="fp" href="">
								<label style="color:#B22640 !important;">Forgot Password?</label>
							</a>
						</div>

					</div>

					<div class="row mt-4 justify-content-center">
						<button style="color:white !important;">{{ button_label|default('Sign in') }}</button>


					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				</from>
			</div>

		</div>
	</div>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
{% endblock %}
