{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - seance
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View seance <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ seance.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ seance.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ seance.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Seance</strong></p>
        <p>
            {{ seance.seance }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Begindate</strong></p>
        <p>
            {% if seance.beginDate %}{{ seance.beginDate|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Enddate</strong></p>
        <p>
            {% if seance.endDate %}{{ seance.endDate|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Begintime</strong></p>
        <p>
            {% if seance.beginTime %}{{ seance.beginTime|date('H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Endtime</strong></p>
        <p>
            {% if seance.endTime %}{{ seance.endTime|date('H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('seance') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('seance_edit', { 'id':  seance.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('seance_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('seance_delete', { 'id': seance.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

