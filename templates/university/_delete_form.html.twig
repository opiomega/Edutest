<form method="post" action="{{ path('university_delete', {'id': university.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ university.id) }}">
    <button class="btn btn-outline-danger float-right">Delete</button>
</form>
 